<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/channel_list_layout"
              android:layout_width="200dp"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_alignParentLeft="true"
              android:layout_margin="1dp" android:layout_alignParentTop="true"
              android:background="@drawable/pop_up_round_shape"
              android:visibility="gone"
              android:animateLayoutChanges="true"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/channel_list_header"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            >

       <!-- <EditText android:id="@+id/channelSearch"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:hint="Kanallar..."
                  android:inputType="textVisiblePassword"
                  android:textColor="@color/White"
                  android:textSize="12dp"
                  android:textAlignment="center"
                  android:paddingBottom="5dp"
                  android:background="@drawable/menutitlebar"
                  android:layout_alignParentLeft="true"/>-->



        <TextView
                android:background="@drawable/menutitlebar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kanallar"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:layout_alignParentLeft="true"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/close32"
                android:layout_alignParentRight="true"
                android:id="@+id/tv_bar_close_btn"/>
    </RelativeLayout>


    <ListView
            android:id="@+id/channels"
            android:layout_below="@+id/channel_list_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/basicBckgrnd"
            android:choiceMode="singleChoice"
            android:fadingEdge="none"
            android:clickable="true"
            android:focusableInTouchMode="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_marginRight="1dp"
            android:layout_marginLeft="1dp"
            >

    </ListView>

</LinearLayout>