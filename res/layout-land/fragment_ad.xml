<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:gravity="bottom"
                android:layout_alignParentBottom="true"
        >

    <!--ads:adUnitId sets the ad unit ID, which is defined in values/strings.xml -->
    <com.google.android.gms.ads.AdView
            android:layout_alignParentBottom="true"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id"
            />


    <RelativeLayout android:layout_width="wrap_content"
                    android:id="@+id/adCloseTextArea"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="4dp"
                    android:background="@color/basicBckgrnd" android:layout_alignParentBottom="true"
            >

        <TextView android:id="@+id/adCloseText"
                  android:singleLine="true"
                  android:layout_margin="5dp"
                  android:text="KapanÄ±yor..."
                   android:layout_width="90dp"
                  android:layout_height="wrap_content"
                  android:textSize="15dp"/>

    </RelativeLayout>

</RelativeLayout>
